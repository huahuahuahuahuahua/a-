
.clear_button:after
{
	border: none;
}
.clear_button
{
	border: none;
	background: none;
	padding:0px !important;
	margin:0px !important;
	border-radius: 0px;
	line-height: inherit;
}
.ezshare
{
	width:100%;
	height: 100%;
	background: rgba(0,0,0,.3);
	position: absolute;
	z-index:999999;
}
.ezshare>view
{
	width:100%;
	bottom:0px;
	background: #fff;
	position: fixed;
}
.ezshare>view>view
{
	text-align: center;
	font-size: 16px;
	height:50px;
	line-height: 50px;
	color:#000;
}
.ezshare>view>view.divider
{
	border-bottom: 1px solid #f2f2f2;
}
.ezshare>view>view:nth-child(3)
{
	color: #ff0000;
}

